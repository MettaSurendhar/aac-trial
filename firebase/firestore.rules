rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if request.auth != null;
    }

    match /requests/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /mentorships/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if /databases/$(database)/documents/users/$(request.auth.uid) in resource.data.user_refs;
      allow delete: if false;
    }

    match /chats/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /chats/{parent}/chat_messages/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/chats/$(parent)).data.user_refs;
      allow delete: if false;
    }

    match /{path=**}/chat_messages/{document} {
      allow read: if true;
    }


    match /admin_requests/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if false;
    }

    match /user_reports/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if false;
    }

    match /chats/{parent}/meetings/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if /databases/$(database)/documents/users/$(request.auth.uid) in get(/databases/$(database)/documents/chats/$(parent)).data.user_refs;
      allow delete: if false;
    }

    match /{path=**}/meetings/{document} {
      allow read: if true;
    }

  }
}
